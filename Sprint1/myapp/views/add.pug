doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Movies Database
    // Remy Sharp Shim
    //if lte IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js', type='text/javascript')
    style.
      table {
      border-collapse: collapse;
      width: 95%;
      margin-left:auto;
      margin-right:auto;
      }
      th {
      text-align: center;
      padding-right:10px;
      }
      tr {
      height: 25px;
      }
      #addNewMovieButton  {
      text-align:center;
      width:100px;
      font-size:20px;
      margin-top:25px;
      float: right;
      margin-right:50px;
      }
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    #wrapper
      header
        a(href='index.pug')
          img(src='/images/logo.jpg', alt='logo')
      main
        form#addForm(method ="POST" action = '/add')
          table

            // First Row
            tbody
              tr
                th Title
                th Director
                th Actor 1
                th Actor 2
                th Actor 3
                th Genre
                th Language
                th Content
                th Year
                th Budget
                th IMDB Rating
              // Second Row
              tr
                td
                  input(type='text', name='title', size='8', <='', td='')
                td
                  input(type='text', name='director', size='8', <='', td='')
                td
                  input(type='text', name='actor1', size='8', <='', td='')
                td
                  input(type='text', name='actor2', size='8', <='', td='')
                td
                  input(type='text', name='actor3', size='8', <='', td='')
                td
                  input(type='text', name='genre', size='8', <='', td='')
                td
                  input(type='text', name='language', size='8', <='', td='')
                td
                  input(type='text', name='content', size='8', <='', td='')
                td
                  input(type='text', name='year', size='8', <='', td='')
                td
                  input(type='text', name='budget', size='8', <='', td='')
                td
                  input(type='text', name='rating', size='8', <='', td='')

          // Add movie button
          input#addNewMovieButton(type='Submit', value=' ADD ')
      footer
        ul
          li Copyright 2019 Â©
          li All Rights Reserved
          li Web Designed by Team Awesome
          li
            a(href='contactus') Contact
    // wrapper end
